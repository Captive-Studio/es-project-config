{
  "name": "@captive/project-config-src",
  "private": true,
  "files": [],
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "/@babel/eslint-parser",
      "/eslint"
    ]
  },
  "scripts": {
    "build": "npm-run-all -p \"build:*\"",
    "postbuild": "npm run docs",
    "build:empty": ":",
    "build:packages": "lerna run build",
    "clean": "lerna run clean",
    "configure": "npm run mrm -- configure",
    "coverage": ":",
    "docs": "md-magic --path './*.md' --ignore='node_modules' && lerna run docs",
    "format": "eslint . --quiet --cache --fix --ext .js,.jsx,.ts,.tsx,.json",
    "prepare": "npm-run-all -p \"prepare:*\"",
    "lint": "eslint . --cache --ext .js,.jsx,.ts,.tsx,.json",
    "mrm": "mrm --dir packages/mrm-preset",
    "prepare:packages": "lerna run prepare",
    "prepare:empty": ":",
    "prepare:husky": "is-ci || husky install",
    "release": "lerna publish",
    "rescue": "git clean -fdx;yarn install",
    "test": "npm-run-all -p \"test:*\"",
    "test:packages": "lerna run test",
    "test:cspell": "cspell '**' --no-summary",
    "validate": "npm run build && npm run lint && npm test"
  },
  "commitlint": {
    "extends": [
      "@captive/commitlint-config"
    ]
  },
  "lint-staged": {
    "*.json": [
      "eslint"
    ],
    "*.js?(x)": [
      "eslint"
    ],
    "*.ts?(x)": [
      "eslint"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "sort-keys-fix"
    ],
    "extends": [
      "@captive/eslint-config"
    ],
    "rules": {
      "unicorn/prefer-module": "off"
    },
    "root": true
  },
  "eslintIgnore": [
    "node_modules/",
    "coverage/",
    "build/",
    ".cache/",
    "lib/",
    "**/tsconfig.json",
    "**/package-lock.json",
    ".vscode/**"
  ],
  "devDependencies": {
    "@babel/core": "7.16.0",
    "@babel/eslint-parser": "7.16.0",
    "@captive/commitlint-config": "workspace:*",
    "@captive/eslint-config": "workspace:*",
    "@captive/ts-config": "workspace:*",
    "@commitlint/cli": "13.1.0",
    "@types/node": "^12.12.24",
    "cspell": "5.12.3",
    "eslint": "8.8.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "husky": "7.0.4",
    "is-ci": "3.0.0",
    "lerna": "4.0.0",
    "lint-staged": "11.2.6",
    "markdown-magic": "2.5.2",
    "markdown-magic-package-json": "2.0.2",
    "markdown-magic-subpackage-list": "1.1.1",
    "mrm": "2.6.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "typescript": "4.5.5"
  },
  "engines": {
    "node": ">=14.0.0",
    "yarn": ">=1.4.0"
  },
  "packageManager": "yarn@3.2.0"
}
