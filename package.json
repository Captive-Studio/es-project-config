{
  "name": "@captive/project-config-src",
  "version": "1.0.0-alpha.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:Captive-Studio/es-project-config.git"
  },
  "license": "UNLICENSED",
  "type": "module",
  "files": [],
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "/eslint"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "code-analysis": ":",
    "configure": "npm run mrm -- configure",
    "coverage": ":",
    "develop": ":",
    "docs": "md-magic --path './*.md' --ignore='node_modules' && turbo run docs",
    "format": "turbo run format",
    "format:root": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml --ignore-pattern='packages/*/**' --fix",
    "lint": "turbo run lint",
    "lint:root": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml --ignore-pattern='packages/*/**'",
    "mrm": "npm exec --package=mrm --package=@w5s/mrm-preset -- mrm --preset @w5s/mrm-preset",
    "postbuild": "npm run docs",
    "prepare": "concurrently \"npm:prepare:*\" \":\"",
    "prepare:husky": "is-ci || husky install",
    "prepare:packages": "turbo run prepare",
    "pull-external": "turbo run pull-external",
    "release": "is-ci && lerna publish --yes || lerna publish",
    "rescue": "git clean -fdx;yarn install",
    "spellcheck": "turbo run spellcheck",
    "spellcheck:root": "cspell --no-progress '**' --exclude='packages/*/**'",
    "test": "turbo run test",
    "validate": "turbo run build lint test",
    "version": "yarn install && git stage yarn.lock"
  },
  "commitlint": {
    "extends": [
      "@captive/commitlint-config"
    ]
  },
  "lint-staged": {
    "*.js?(x)": [
      "eslint"
    ],
    "*.ts?(x)": [
      "eslint"
    ],
    "*.{json,jsonc,json5}": [
      "eslint"
    ],
    "*.{yml,yaml}": [
      "eslint"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "sort-keys-fix"
    ],
    "extends": [
      "@captive/eslint-config"
    ],
    "rules": {
      "unicorn/prefer-module": "off"
    },
    "root": true
  },
  "eslintIgnore": [
    "node_modules/",
    "coverage/",
    "build/",
    ".cache/",
    "lib/",
    "**/tsconfig.json",
    "**/package-lock.json",
    ".vscode/**",
    "./public/"
  ],
  "devDependencies": {
    "@captive/commitlint-config": "workspace:*",
    "@captive/eslint-config": "workspace:*",
    "@captive/ts-config": "workspace:*",
    "@commitlint/cli": "17.4.2",
    "@jest/globals": "latest",
    "@types/node": "12.20.45",
    "@w5s/conventional-changelog": "1.0.0-alpha.2",
    "@w5s/cspell-config": "1.0.0-alpha.9",
    "concurrently": "7.6.0",
    "cspell": "6.22.0",
    "es-jest": "2.1.0",
    "eslint": "8.34.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "jest": "29.4.2",
    "lerna": "6.4.1",
    "lint-staged": "13.1.1",
    "markdown-magic": "2.6.1",
    "markdown-magic-package-json": "2.0.2",
    "markdown-magic-subpackage-list": "1.1.2",
    "prettier": "2.8.4",
    "turbo": "1.7.4",
    "typescript": "4.9.5"
  },
  "packageManager": "yarn@3.4.1",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=6.0.0",
    "yarn": ">=1.4.0"
  }
}
