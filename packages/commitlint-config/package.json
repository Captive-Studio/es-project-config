{
  "name": "@captive/commitlint-config",
  "version": "1.1.5",
  "description": "Commitlint configuration presets",
  "keywords": [
    "commitlint",
    "git",
    "lint"
  ],
  "homepage": "https://github.com/Captive-Studio/es-project-config/blob/main/packages/commitlint-config#readme",
  "bugs": {
    "url": "https://github.com/Captive-Studio/es-project-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Captive-Studio/es-project-config.git",
    "directory": "packages/commitlint-config"
  },
  "license": "MIT",
  "author": "Julien Polo <julien.polo@captive.fr>",
  "type": "commonjs",
  "exports": {
    ".": "./index.js",
    "./lib/*": "./lib/*"
  },
  "typings": "./index.d.ts",
  "files": [
    "lib/**/!(*.spec).d.ts",
    "lib/**/!(*.spec).d.ts.map",
    "lib/**/!(*.spec).js.map",
    "lib/**/!(*.spec).js",
    "src/**/!(*.spec).ts",
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "build": "concurrently \"npm:build:*\" \":\"",
    "build:src": "npm run clean:src;tsc",
    "clean": "concurrently \"npm:clean:*\" \":\"",
    "clean:src": "rm -rf lib/*",
    "docs": "md-magic --path '**/*.md' --ignore='node_modules'",
    "format": "concurrently \"npm:format:*\" \":\"",
    "format:src": "eslint . --fix --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "lint": "concurrently \"npm:lint:*\" \":\"",
    "lint:src": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "prepare": "concurrently \"npm:prepare:*\" \":\"",
    "spellcheck": "cspell --no-progress '**'",
    "test": "concurrently \"npm:test:*\" ",
    "test:src": "jest"
  },
  "jest": {
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "preset": "es-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/",
      "/build/",
      "/.cache/",
      "/docs/",
      "/public/"
    ]
  },
  "dependencies": {
    "@w5s/commitlint-config": "^1.0.3"
  },
  "devDependencies": {
    "@commitlint/lint": "17.4.0",
    "@jest/globals": "29.3.1"
  },
  "peerDependencies": {
    "@commitlint/cli": "^16.0.0 || ^17.0.0"
  },
  "peerDependenciesMeta": {
    "@commitlint/cli": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
