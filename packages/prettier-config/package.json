{
  "name": "@captive/prettier-config",
  "version": "2.0.0",
  "description": "Prettier shared configuration",
  "keywords": [
    "typescript",
    "config",
    "tsc"
  ],
  "homepage": "https://github.com/Captive-Studio/es-project-config/blob/main/packages/prettier-config#readme",
  "bugs": {
    "url": "https://github.com/Captive-Studio/es-project-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Captive-Studio/es-project-config.git",
    "directory": "packages/prettier-config"
  },
  "license": "MIT",
  "author": "Julien Polo <julien.polo@gmail.com>",
  "type": "commonjs",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "require": "./index.cjs"
    },
    "./dist/*": "./dist/*"
  },
  "main": "./index.cjs",
  "typings": "./index.d.ts",
  "files": [
    "dist/",
    "src/",
    "index.*",
    "index.d.ts",
    "!**/*.spec.*",
    "!**/__tests__/**"
  ],
  "scripts": {
    "build": "concurrently \"npm:build:*\" \":\"",
    "build:tsc": "tsc -b tsconfig.build.json",
    "clean": "concurrently \"npm:clean:*\" \":\"",
    "clean:tsc": "rm -rf dist",
    "docs": "node scripts/build-docs.mjs && node ../../markdown.mjs ",
    "format": "concurrently \"npm:format:*\" \":\"",
    "format:src": "eslint . --fix --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "lint": "concurrently \"npm:lint:*\" \":\"",
    "lint:src": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "postbuild:tsc": "npm run docs",
    "prepare": "concurrently \"npm:prepare:*\" \":\"",
    "prepublishOnly": "npm run clean; npm run build",
    "spellcheck": "cspell --no-progress '**'",
    "test": "concurrently \"npm:test:*\" \":\"",
    "test:src": "vitest run"
  },
  "dependencies": {
    "@w5s/prettier-config": "^1.1.1"
  },
  "devDependencies": {
    "prettier": "3.0.3",
    "vite": "latest",
    "vitest": "latest"
  },
  "peerDependencies": {
    "prettier": "2.x || 3.x"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
