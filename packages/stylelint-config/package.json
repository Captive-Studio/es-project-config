{
  "name": "@captive/stylelint-config",
  "version": "1.3.10",
  "description": "StyleLint configuration presets",
  "keywords": [
    "stylelint",
    "config",
    "lint"
  ],
  "homepage": "https://github.com/Captive-Studio/es-project-config/blob/master/packages/stylelint-config#readme",
  "bugs": {
    "url": "https://github.com/Captive-Studio/es-project-config.git/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Captive-Studio/es-project-config.git",
    "directory": "packages/stylelint-config"
  },
  "license": "MIT",
  "author": "Julien Polo <julien.polo@captive.fr>",
  "type": "commonjs",
  "main": "index.js",
  "files": [
    "*.js"
  ],
  "scripts": {
    "build": "concurrently \"npm:build:*\" \":\"",
    "build:tsc": "tsc -b tsconfig.build.json",
    "clean": "concurrently \"npm:clean:*\" \":\"",
    "clean:tsc": "rm -rf lib",
    "docs": "md-magic --path '**/*.md' --ignore='node_modules'",
    "format": "concurrently \"npm:format:*\" \":\"",
    "format:src": "eslint . --fix --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "lint": "concurrently \"npm:lint:*\" \":\"",
    "lint:src": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "prepare": "concurrently \"npm:prepare:*\" \":\"",
    "prepublishOnly": "npm run clean; npm run build",
    "spellcheck": "cspell --no-progress '**'",
    "test": "concurrently \"npm:test:*\" ",
    "test:style": "stylelint _tests"
  },
  "eslintConfig": {
    "rules": {
      "sort-keys-fix/sort-keys-fix": "error"
    }
  },
  "dependencies": {
    "@captive/prettier-config": "^1.1.7",
    "postcss": "^8.4.14",
    "postcss-html": "*",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard-scss": "^7.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-order": "^6.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.3.0"
  },
  "devDependencies": {
    "stylelint": "15.2.0"
  },
  "peerDependencies": {
    "stylelint": "^14.2.0 || ^15.0.0"
  },
  "peerDependenciesMeta": {
    "stylelint": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
