{
  "name": "@captive/conventional-changelog",
  "version": "2.0.10",
  "description": "Conventional changelog plugin for Captive projects",
  "keywords": [
    "commitlint",
    "git",
    "lint",
    "gitmoji"
  ],
  "homepage": "https://github.com/Captive-Studio/es-project-config/blob/main/packages/conventional-changelog#readme",
  "bugs": {
    "url": "https://github.com/Captive-Studio/es-project-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Captive-Studio/es-project-config.git",
    "directory": "packages/conventional-changelog"
  },
  "license": "MIT",
  "author": "Julien Polo <julien.polo@captive.fr>",
  "type": "module",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./dist/*": "./dist/*"
  },
  "files": [
    "dist/",
    "src/",
    "index.*",
    "index.d.ts",
    "!**/*.spec.*",
    "!**/__tests__/**"
  ],
  "scripts": {
    "build": "npx run-p \"build:*\"",
    "build:tsc": "npx tsup",
    "clean": "npx run-p \"clean:*\"",
    "clean:tsc": "rm -rf dist",
    "docs": "node ../../markdown.mjs",
    "format": "npx run-p \"format:*\"",
    "format:src": "eslint . --fix --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "lint": "npx run-p \"lint:*\"",
    "lint:src": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json,jsonc,json5,yml,yaml",
    "prepare": "npx run-p \"prepare:*\"",
    "prepare:empty": ":",
    "prepublishOnly": "npm run clean; npm run build",
    "spellcheck": "cspell --no-progress '**'",
    "test": "npx run-p \"test:*\"",
    "test:src": "vitest run"
  },
  "dependencies": {
    "@w5s/conventional-changelog": "2.0.20"
  },
  "devDependencies": {
    "@captive/tsup-config": "workspace:*",
    "tsup": "8.2.4",
    "vite": "latest",
    "vitest": "latest"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
