{
  "name": "@captive/ts-config",
  "version": "1.3.1",
  "description": "Typescript compiler configuration presets",
  "keywords": [
    "typescript",
    "config",
    "tsc"
  ],
  "homepage": "https://github.com/Captive-Studio/es-project-config/blob/master/packages/ts-config#readme",
  "bugs": {
    "url": "https://github.com/Captive-Studio/es-project-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Captive-Studio/es-project-config.git",
    "directory": "packages/ts-config"
  },
  "license": "MIT",
  "author": "Julien Polo <julien.polo@captive.fr>",
  "main": "./tsconfig.json",
  "files": [
    "tsconfig.json"
  ],
  "scripts": {
    "build": "concurrently 'npm:build:*'",
    "build:empty": ":",
    "docs": "md-magic --path '**/*.md' --ignore='node_modules'",
    "format": "eslint . --fix --ext=mjs,cjs,js,jsx,ts,tsx,json,yaml,yml",
    "lint": "eslint . --ext=mjs,cjs,js,jsx,ts,tsx,json,yaml,yml",
    "pull-external": "scripts/pull",
    "spellcheck": "cspell --no-progress '**'",
    "test": "tsc -p _tests/tsconfig.json --noEmit --skipLibCheck"
  },
  "devDependencies": {
    "typescript": "4.9.3"
  },
  "peerDependencies": {
    "typescript": ">= 4.7"
  },
  "publishConfig": {
    "access": "public"
  }
}
